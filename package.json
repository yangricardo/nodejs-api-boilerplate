{
  "name": "nodejs-api-boilerplate",
  "version": "1.0.0",
  "description": "A Node Rest Api boilerplate using Typescript, TypeORM, Express",
  "main": "src/index.ts",
  "author": "Yang Ricardo Barcellos Miranda <yangricardo17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc -p .",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register  --respawn --transpile-only --inspect -- ./src/index.ts",
    "prod:ts-node": "NODE_ENV=production ts-node -r tsconfig-paths/register  --transpile-only ./src/index.ts",
    "prod:node": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register  ./src/index.ts",
    "typeorm": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --transpile-only ./node_modules/typeorm/cli.js --config src/configs/typeorm.config.ts",
    "test": "jest",
    "lint": "eslint --fix --ext .js,.ts,.jsx,.tsx ."
  },
  "dependencies": {
    "@types/node-forge": "^0.9.7",
    "@types/pkijs": "^0.0.6",
    "activedirectory2": "^2.1.0",
    "asn1js": "^2.1.1",
    "celebrate": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.4.0",
    "ldapjs": "^2.2.4",
    "ldapts": "^2.12.0",
    "node-forge": "^0.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "pkijs": "^2.1.95",
    "pvutils": "^1.0.17",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.2.0",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/activedirectory2": "^1.2.2",
    "@types/asn1js": "^2.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/ldapjs": "^1.0.10",
    "@types/node": "^14.14.41",
    "@types/passport": "^1.0.6",
    "@types/pvutils": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
