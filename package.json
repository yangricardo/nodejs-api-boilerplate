{
  "name": "nodejs-api-boilerplate",
  "version": "1.0.0",
  "description": "A Node Rest Api boilerplate using Typescript, TypeORM, Express",
  "main": "src/index.ts",
  "author": "Yang Ricardo Barcellos Miranda <yangricardo17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc -p .",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register  --respawn --transpile-only --inspect -- ./src/index.ts",
    "prod:ts-node": "NODE_ENV=production ts-node -r tsconfig-paths/register  --transpile-only ./src/index.ts",
    "prod:node": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register  ./src/index.ts"
  },
  "dependencies": {
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  }
}
